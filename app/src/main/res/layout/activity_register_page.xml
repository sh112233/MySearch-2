<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f4f4"
    tools:context="com.jwei.mysearch.activity_register_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="#21b2fa"
        >
        <Button
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:id="@+id/register_back"
            android:drawableLeft="@mipmap/left"
            android:paddingLeft="15sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />
        <TextView
            android:layout_width="330sp"
            android:layout_height="match_parent"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:gravity="left|center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40sp"
        android:paddingBottom="15sp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:text="国家/地区"
            android:textColor="#312d2d"
            android:textSize="16sp"
            android:layout_marginLeft="20sp"
            android:id="@+id/set_choice"/>

        <TextView
            android:id="@+id/area"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:text="中国大陆+86"
            android:textColor="#21b2fa"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginRight="20sp"
            android:src="@mipmap/to"
            android:id="@+id/goto_area"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        >

        <TextView
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机号"
            android:layout_marginLeft="20sp"
            android:textColor="#312d2d"
            android:textSize="16sp"
            android:id="@+id/phone_number"/>

        <EditText
            android:id="@+id/number_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        >

        <TextView
            android:id="@+id/register_password"
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:text="密码"
            android:textColor="#312d2d"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/password_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:ems="10"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp">

            <requestFocus/>
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        >

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="确认密码"
            android:layout_marginLeft="20sp"
            android:textColor="#312d2d"
            android:textSize="16sp"
            android:id="@+id/register_password_again"/>

        <EditText
            android:id="@+id/password_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_next"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:layout_marginTop="30sp"
        android:background="@drawable/shape"
        android:text="下一步"
        android:textSize="17sp"/>

</LinearLayout>
