<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f4f4"
    android:orientation="vertical"
    tools:context="com.jwei.mysearch.activity_profile_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="#21b2fa"
        >
        <Button
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:id="@+id/profile_edit_back"
            android:drawableLeft="@mipmap/left"
            android:paddingLeft="15sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:text="个人信息"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:gravity="left|center"
            />
        <Button
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/profile_edit_done"
            android:layout_marginRight="7sp"
            android:paddingRight="10sp"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:textSize="17sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="保存" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingBottom="10sp"
        android:paddingTop="5sp"
        android:paddingLeft="10sp"
        >
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:id="@+id/sex"
            android:layout_marginLeft="10sp"
            android:text="性别"
            android:textSize="15sp"
            android:textColor="#afa5a5"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:id="@+id/sex_edit"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:paddingTop="5sp"
        android:paddingLeft="10sp"
        >

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:id="@+id/age"
            android:layout_marginLeft="10sp"
            android:text="年龄"
            android:textSize="15sp"
            android:textColor="#afa5a5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_edit"
            android:background="@android:color/transparent"
            android:onClick="age_set"
            android:hint="0"
            android:textColorHint="#4b4848"
            android:textSize="15sp"
            android:textColor="#4b4848"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5px"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        >

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10sp"
            android:text="手机号"
            android:textSize="15sp"
            android:textColor="#afa5a5"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num_edit"
            android:background="@android:color/transparent"
            android:editable="false"
            android:text="18054791199"
            android:textSize="15sp"
            android:textColor="#4b4848"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:paddingTop="5sp"
        android:paddingLeft="10sp"
        >

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10sp"
            android:text="邮箱"
            android:textSize="15sp"
            android:textColor="#afa5a5"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailbox_edit"
            android:background="@android:color/transparent"
            android:hint="651903069@qq.com"
            android:textColorHint="#4b4848"
            android:textSize="15sp"
            android:textColor="#4b4848"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5px"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingLeft="10sp"
        >

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10sp"
            android:text="个性签名"
            android:textSize="15sp"
            android:textColor="#afa5a5"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sig_edit"
            android:background="@android:color/transparent"
            android:hint="介绍一下自己吧"
            android:textColorHint="#4b4848"
            android:textSize="15sp"
            android:textColor="#4b4848"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            />
    </LinearLayout>


</LinearLayout>
